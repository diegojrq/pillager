<h1>Listing Communities</h1>

<table>
	<tr>
		<th>Community</th>
	</tr>

	<% @communities.each do |community| %>
	  <tr>
	    <td><%= link_to community.name, community %>
		  <% if community.owner_id == current_user.id %>
			[owner]
		  <% end %>
		</td>
	  </tr>
	<% end %>
</table>

<br />

<%= link_to 'New Community', new_community_path %>
